<div class="jumbotron">

  <h1>Burger Time!</h1>

  <div class="container" id="menus">
    <h3>Burgers on the Menu!</h3>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="container" id="menus">
    <h3>Burgers that you ate!</h3>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>

  <div class="container" id="menus">
    <h3>Add a Burger</h3>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="devoured">
      </div>

      <button type="submit">Add Burger</button>
    </form>

  </div>

</div>